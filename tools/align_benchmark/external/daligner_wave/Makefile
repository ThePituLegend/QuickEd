###############################################################################
# Definitions
###############################################################################
FOLDER_BUILD=../build
CC=gcc

###############################################################################
# Modules
###############################################################################
MODULES=align \
        DB \
        QV

SRCS=$(addsuffix .c, $(MODULES))
OBJS=$(addprefix $(FOLDER_BUILD)/, $(SRCS:.c=.o))

###############################################################################
# Rules
###############################################################################
all: $(OBJS)

# General building rule
$(FOLDER_BUILD)/%.o : %.c
	$(CC) $(CC_FLAGS) -g -O3 -Wno-unused-result -c $< -o $@