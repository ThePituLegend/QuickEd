###############################################################################
# Definitions
###############################################################################
FOLDER_BUILD=../build

CC=gcc
CC_FLAGS=-Wall -march=native -Ofast 

###############################################################################
# Modules
###############################################################################
MODULES=bitpal.m0.x1.g1 \
        bitpal.m1.x4.g2
        
SRCS=$(addsuffix .c, $(MODULES))
OBJS=$(addprefix $(FOLDER_BUILD)/, $(SRCS:.c=.o))

###############################################################################
# Rules
###############################################################################
all: $(OBJS)

# General building rule
$(FOLDER_BUILD)/%.o : %.c
	$(CC) $(CC_FLAGS) -O3 -c $< -o $@